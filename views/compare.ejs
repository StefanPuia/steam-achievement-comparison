<%-include("head.ejs")%>
<style>
    .gray {
        filter: grayscale(100%);
    }
    .center {
        text-align: center;
    }
</style>

<div class="container">
    <table id="results" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th><%=stats1.steamID%></th>
                <th><%=stats2.steamID%></th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        <% for (let i = 0; i < stats1.achievements.length; i++) {
            let achie1 = stats1.achievements[i];
            let achie2 = stats2.achievements[i];

            let filter1 = achie1.unlocktime > 0 ? "" : "gray";
            let filter2 = achie2.unlocktime > 0 ? "" : "gray";
            %>
            <tr>
                <td class="center"><img src="<%= achie1.data.icon %>" class="<%= filter1 %>"/></td>
                <td class="center"><img src="<%= achie2.data.icon %>" class="<%= filter2 %>"/></td>
                <td><b><%= achie1.data.displayName %></b><br><%= achie1.data.description %></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>

<script>
$(document).ready( function () {
    $('#results').DataTable();
} )
</script>